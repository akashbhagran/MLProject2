// Jenkinsfile (Declarative Pipeline)

pipeline {
    agent any
     
    stages {
    	
    	stage('Hello') { 
            steps {
            	// hello world
                echo 'hello world'
            }
        }
        
        stage('Test') {
      	    steps{
            	withPythonEnv('python3') {
                	sh 'pip install -r requirements.txt'
                	sh 'python3 --version'
            	}
            }
        }
        
       // stage('Build') { 
