Jenkinsfile (Declarative Pipeline)

pipeline {
    agent any
     
    stages {
    	
    	stage('Hello') { 
            steps {
            	// hello world
                echo hello world
            }
        }
        
        stage('Test') {
            withPythonEnv('python3') {
                sh 'pip install -r requirements.txt
                sh 'python --version'
            }
        }
        
        stage('Build') { 
            steps {
                // 
            }
        }
        
        stage('Deploy') { 
            steps {
                // 
            }
        }
    }
}                                                                                                                                                        
